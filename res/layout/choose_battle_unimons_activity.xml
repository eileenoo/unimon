<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99B8FA" >
    
    <TextView
        android:id="@+id/choose_unimon_for_battle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/choose_primary_unimon" 
        android:textSize="20sp"/>"
    
    <ListView
        android:id="@+id/choose_unimon_listView"
        android:layout_below="@id/choose_unimon_for_battle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</RelativeLayout>
