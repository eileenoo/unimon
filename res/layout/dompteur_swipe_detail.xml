<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A56B2" >
    
    <TextView 
        android:id="@+id/dompteur_unimon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#ffd12e" />
    
    <ImageView 
        android:id="@+id/dompteur_unimon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_unimon_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/unimon_image_text"
		android:src="@drawable/robomon_5000"/>
    
    <TextView
        android:id="@+id/dompteur_unimon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_unimon_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" 
        android:textColor="#ffd12e" />
    
     <TextView
        android:id="@+id/dompteur_health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dompteur_unimon_level"
        android:layout_marginTop="5dp"
        android:text="@string/health_text"
        android:textColor="#ffd12e"  />
    
    <ProgressBar
        android:id="@+id/dompteur_healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_health_text"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:progress="0"
        android:textSize="18sp"/>
    
    
    <TextView
        android:id="@+id/dompteur_unimon_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_health_text"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true" />
    
    <TextView
          android:id="@+id/dompteur_xp_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dompteur_unimon_health"
          android:layout_centerHorizontal="true"
          android:layout_marginTop ="5dp"
          android:text="@string/xp_text"
          android:textColor="#ffd12e"  />
    
    <ProgressBar
        android:id="@+id/dompteur_xpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_xp_text"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:progress="0"
        android:textSize="18sp"/>
    
    <TextView
        android:id="@+id/dompteur_unimon_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dompteur_xp_text"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/dompteur_skillpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dompteur_xpBar"   
        android:layout_centerHorizontal="true"    
        android:layout_margin="5dp"     
        android:text="@string/skillpoint_text"
        android:textColor="#ffd12e" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_below="@id/dompteur_skillpoints">

        <TextView
            android:id="@+id/dompteur_spell_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/spells_headline"
            android:textColor="#ffd12e"  />

        <TextView
            android:id="@+id/dompteur_spell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#ffd12e"  />
        
    </LinearLayout>

</RelativeLayout>

