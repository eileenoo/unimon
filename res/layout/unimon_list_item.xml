<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/unimon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xpBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:text="@string/unimon_image_text" />

    <TextView
        android:id="@+id/unimon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/unimon_image"
        android:text="@string/name_text" />

    <TextView
        android:id="@+id/unimon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unimon_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/unimon_name"
        android:text="@string/level_text" />
    
    <ProgressBar
        android:id="@+id/healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unimon_level"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/unimon_image"/>
    
      <TextView
        android:id="@+id/unimon_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unimon_level"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/unimon_image"
        android:layout_marginLeft="100dp"/>
      
      <ProgressBar
        android:id="@+id/xpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unimon_health"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/unimon_image"/>
    
      <TextView
        android:id="@+id/unimon_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unimon_health"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/unimon_image"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>
