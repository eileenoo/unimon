<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2A56B2" >

    <ListView
        android:id="@+id/listView_unimons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/back_to_map_button_unimons"
        android:layout_margin="10dp"
        android:paddingBottom="5dp" >

    </ListView>
    
    <Button
        android:id="@+id/back_to_map_button_unimons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/back_to_map_button_text"
        android:background="@drawable/startbutton_shape"
        android:textColor="#ffd12e" />

</RelativeLayout>