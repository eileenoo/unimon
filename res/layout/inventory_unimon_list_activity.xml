<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <ListView
         android:id="@+id/listView_unimons"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/inner_Llayout"
         android:layout_alignParentTop="true" >

    </ListView>
    
     <LinearLayout
        android:id="@+id/inner_Llayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3" >
    
	    <Button
	        android:id="@+id/healpot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/healpot_name"
	        android:textSize="16sp" />
	
	    <Button
	        android:id="@+id/revive"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/revive_name"
	        android:textSize="16sp" />
	
	    <Button
	        android:id="@+id/protector"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/protector_name" 
	        android:textSize="16sp"/>
    
	    </LinearLayout>

</RelativeLayout>
