<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/spell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="HIIIIIIIIIIIIIIIIi"
        android:textSize="25sp"/>
    
    <TextView 
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/spell_name"
        android:text="Level: 3"
        android:textSize="15sp"/>
    
    <TextView 
        android:id="@+id/current_spell_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/level"
        android:layout_marginLeft="10dp"
        android:text="Damage: 20"
        android:textSize="15sp"/>
    
    <TextView 
        android:id="@+id/next_level_spell_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/current_spell_damage"
        android:layout_marginLeft="10dp"
        android:text="Damage at level 2: 22"
        android:textSize="15sp"/>"
    

</RelativeLayout>
