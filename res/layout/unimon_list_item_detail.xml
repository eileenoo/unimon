<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#2A56B2" >

    <TextView
        android:id="@+id/detail_unimon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="#ffd12e" />
    
    <ImageView
        android:id="@+id/detail_unimon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_unimon_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:contentDescription="@string/unimon_image_text"
        android:src="@drawable/robomon_5000" />
    
    <TextView
        android:id="@+id/detail_unimon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_unimon_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffd12e" />
    
     <TextView
        android:id="@+id/detail_health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detail_unimon_level"
        android:layout_marginTop="5dp"
        android:text="@string/health_text"
        android:textColor="#ffd12e" />

    <ProgressBar
        android:id="@+id/detail_healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_health_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:progress="0" />   

    <TextView
        android:id="@+id/detail_unimon_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_health_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp" />

    <TextView
          android:id="@+id/xp_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detail_unimon_health"
          android:layout_centerHorizontal="true"
          android:layout_marginTop ="5dp"
          android:text="@string/xp_text"
          android:textColor="#ffd12e" />
    
    <ProgressBar
        android:id="@+id/detail_xpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/xp_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:progress="0" />
    
    
    <TextView
        android:id="@+id/detail_unimon_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xp_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/detail_unimon_skillpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_xpBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffd12e" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_unimon_skillpoints"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/detail_spell_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/spells_headline" 
            android:textColor="#ffd12e"/>

        <TextView
            android:id="@+id/detail_spell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#ffd12e" />
    </LinearLayout>

</RelativeLayout>