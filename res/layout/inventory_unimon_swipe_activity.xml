<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/inventory_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/inventory_use_layout">
    </android.support.v4.view.ViewPager>
    
    <LinearLayout
        android:id="@+id/inventory_use_layout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/inventory_use_healPot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_use_healPot" />
        
        <Button
            android:id="@+id/inventory_use_revive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_use_revive" />
        
    </LinearLayout>

</RelativeLayout>
