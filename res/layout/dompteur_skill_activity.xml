<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A56B2" >  
    
    <ImageView
        android:id="@+id/unimon_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/unimon_image_text"
        android:contentDescription="@string/unimon_image_text"
		android:src="@drawable/robomon"/>

    <TextView
        android:id="@+id/unimon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/unimon_image"
        android:text="@string/name_text"
        android:textSize="20sp"
        android:textColor="#ffd12e"  />

    <TextView
        android:id="@+id/unimon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unimon_name"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/unimon_name"      
        android:text="@string/level_text"
        android:textColor="#ffd12e"  />
  	
    <TextView 
        android:id="@+id/unimon_skillpoints"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/unimon_image"
        android:layout_alignLeft="@+id/unimon_name"
        android:layout_below="@+id/unimon_level"
        android:text="SkillPoints"
        android:textColor="#ffd12e"  />
    
    <ProgressBar
        android:id="@+id/healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unimon_image"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/unimon_image"/>
    
      <TextView
        android:id="@+id/unimon_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unimon_image"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/unimon_image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="90dp"/>
    
    
    <ListView 
        android:id="@+id/dompteur_spell_listView" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/unimon_health"
        android:textColor="#ffd12e"
        android:background="@drawable/startbutton_shape" />
    

</RelativeLayout>
